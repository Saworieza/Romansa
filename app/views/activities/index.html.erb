<div class="container">
	<h1>Activities</h1>
	<% @activities.each do |activity| %>
		<div class="activity">
			<%= link_to activity.owner.username, activity.owner if activity.owner %>
			added comment to <%#= activity.inspect %>   
			<% if activity.trackable %>  
			<% if activity.trackable.kind_of? Comment %>
			  <%= link_to activity.trackable.comment, [activity.trackable.post, activity.trackable] %>  

			<% else %>
			  <%= link_to activity.trackable.body, activity.trackable %>  

			<% end %>
			<% else %>  
			  which has since been removed   
			<% end %> 
		
		</div> 
	<% end %>
</div>
